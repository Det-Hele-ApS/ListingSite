	<script src="~/js/theme/particles.min.js"></script>
	<script src="~/js/theme/typed.min.js"></script>
	<script src="~/js/theme/dropzone.js"></script>
	<script src="~/js/theme/jquery.mb.YTPlayer.js"></script>
	<script src="~/js/theme/leaflet.js"></script>
	<script src="~/js/theme/leaflet-providers.js"></script>
	<script src="~/js/theme/leaflet.markercluster.js"></script>
	<script src="~/js/theme/maps.js"></script>
	<script src="~/js/theme/jquery.mCustomScrollbar.concat.min.js"></script>
	<script src="~/js/theme/ie-emulation-modes-warning.js"></script>

	<script src="~/js/app.js"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
